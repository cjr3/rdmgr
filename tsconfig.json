{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "noImplicitAny": false,
    "types":["node", "jest"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@types/jest"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "**/*.test.js"]
}
